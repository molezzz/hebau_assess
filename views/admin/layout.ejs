<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
    <!-- link rel='stylesheet' href='/stylesheets/bootstrap-theme.min.css' /-->
    <!--link rel='stylesheet' href='/stylesheets/bootstrap-flat-theme.css' /-->
    <script type="text/javascript" src="/javascripts/jquery.min.js"></script>
    <script type="text/javascript" src="/javascripts/angular/angular.min.js"></script>
    <script type="text/javascript" src="/javascripts/bootstrap/bootstrap.min.js"></script>
    <script type="text/javascript" src="/javascripts/angular/angular-locale_zh-cn.js"></script>
    <script type="text/javascript" src="/javascripts/common.js"></script>
    <script type="text/javascript">
    (function($){
      var resize = function(){
        var wh = $(window).height();
        var h = wh - $('#topNav').height();
        $('#mainBody').css({
          height: h
        });
      }

      $(window).resize(resize);
      $(function(){
        $(window).resize();
      });

    })(jQuery);
    </script>
    <%-scripts%>
    <%-stylesheets%>
  </head>
  <body>
    <div id="topNav" class="navbar navbar-inverse navbar-fixed-top" role="navigation">

      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex8-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <span class="navbar-brand" style="color:#FFF;">Assess</span>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse navbar-ex8-collapse">
        <ul class="nav navbar-nav">
          <li class="<%= typeof dashboardMenuActive == 'undefined' ? '' : 'active'%>"><a href="#">首页</a></li>
          <li class="<%= typeof userMenuActive == 'undefined' ? '' : 'active' %>"><a href="/admin/users">用户</a></li>
          <li class="<%= typeof departmentMenuActive == 'undefined' ? '' : 'active' %>"><a href="/admin/departments">部门</a></li>
          <li class="<%= typeof projectMenuActive == 'undefined' ? '' : 'active' %>"><a href="/admin/projects">考评</a></li>
        </ul>
      </div><!-- /.navbar-collapse -->

    </div>
    <div id="mainBody" style="padding: 64px 20px 0;">
      <%- body %>
    </div>
    <!--div id="bottomNav" class="navbar navbar-default navbar-fixed-bottom"></div-->
  </body>
</html>